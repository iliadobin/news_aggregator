# Application Settings
APP_ENVIRONMENT=development
APP_DEBUG=false
APP_TIMEZONE=UTC

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=news_aggregator
DB_PASSWORD=your_secure_password_here
DB_DATABASE=news_aggregator
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Telegram Bot Settings (Classic Control Bot)
BOT_TOKEN=your_bot_token_here
# Comma-separated list of admin Telegram user IDs
BOT_ADMIN_IDS=123456789,987654321
# Optional: for webhook mode
BOT_WEBHOOK_URL=
BOT_WEBHOOK_PATH=/webhook

# Telegram User Bot Settings (for reading messages)
USERBOT_API_ID=your_api_id_here
USERBOT_API_HASH=your_api_hash_here
USERBOT_PHONE=+1234567890
USERBOT_SESSION_NAME=news_aggregator_userbot
USERBOT_SESSION_DIR=sessions

# Filter Settings
FILTER_ENABLE_KEYWORD=true
FILTER_ENABLE_SEMANTIC=true
FILTER_SEMANTIC_THRESHOLD=0.7
FILTER_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
FILTER_EMBEDDING_CACHE_SIZE=1000
FILTER_MAX_MESSAGE_LENGTH=4096

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_JSON_LOGS=false
# Optional: path to log file
LOG_LOG_FILE=logs/app.log
LOG_LOG_FILE_MAX_BYTES=10485760
LOG_LOG_FILE_BACKUP_COUNT=5
